//Leetcode No : 1710. Maximum Units on a Truck - Greedy Approach

import java.util.Arrays;
import java.util.Scanner;

public class MaximumUnitsOnTruck {

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        // Input number of box types
        System.out.print("Enter number of box types: ");
        int n = sc.nextInt();

        int[][] boxTypes = new int[n][2];

        // Input box types
        System.out.println("Enter boxTypes (numberOfBoxes unitsPerBox):");
        for (int i = 0; i < n; i++) {
            boxTypes[i][0] = sc.nextInt(); // number of boxes
            boxTypes[i][1] = sc.nextInt(); // units per box
        }

        // Input truck size
        System.out.print("Enter truck size: ");
        int truckSize = sc.nextInt();

        // Sort by units per box (descending)
        Arrays.sort(boxTypes, (a, b) -> b[1] - a[1]);

        int totalUnits = 0;

        // Greedy selection
        for (int i = 0; i < n && truckSize > 0; i++) {

            int boxesToTake = Math.min(truckSize, boxTypes[i][0]);

            totalUnits += boxesToTake * boxTypes[i][1];
            truckSize -= boxesToTake;
        }

        // Output result
        System.out.println("Maximum units on the truck: " + totalUnits);

        sc.close();
    }
}
