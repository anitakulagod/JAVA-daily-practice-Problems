//Leetcode No : 605 - Can Place Flowers - Greedy Approach

import java.util.Scanner;

public class CanPlaceFlowers {

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        // Input size of flowerbed
        System.out.print("Enter number of plots: ");
        int size = sc.nextInt();

        int[] flowerbed = new int[size];

        // Input flowerbed array
        System.out.println("Enter flowerbed values (0 or 1):");
        for (int i = 0; i < size; i++) {
            flowerbed[i] = sc.nextInt();
        }

        // Input number of flowers to plant
        System.out.print("Enter number of new flowers to plant: ");
        int n = sc.nextInt();

        boolean canPlant = canPlaceFlowers(flowerbed, n);

        System.out.println("Can place all flowers? " + canPlant);

        sc.close();
    }

    // Greedy function
    public static boolean canPlaceFlowers(int[] flowerbed, int n) {

        for (int i = 0; i < flowerbed.length; i++) {

            if (flowerbed[i] == 0) {

                int prev = (i == 0) ? 0 : flowerbed[i - 1];
                int next = (i == flowerbed.length - 1) ? 0 : flowerbed[i + 1];

                // Check if we can plant here
                if (prev == 0 && next == 0) {
                    flowerbed[i] = 1;
                    n--;

                    // All flowers planted
                    if (n == 0) {
                        return true;
                    }
                }
            }
        }

        return n <= 0;
    }
}
