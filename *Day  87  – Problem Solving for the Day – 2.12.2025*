//Corporate Coding Question - Leetcode 55 - Jump Game - Greedy Logic

import java.util.*;

public class JumpGame {
    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        // Input size
        int n = sc.nextInt();
        int[] nums = new int[n];

        // Input elements
        for (int i = 0; i < n; i++) {
            nums[i] = sc.nextInt();
        }

        int maxReach = 0;

        for (int i = 0; i < n; i++) {

            // If current index is not reachable
            if (i > maxReach) {
                System.out.println("false");
                return;
            }

            // Update maximum reachable index
            maxReach = Math.max(maxReach, i + nums[i]);

            // If end is reachable
            if (maxReach >= n - 1) {
                System.out.println("true");
                return;
            }
        }

        System.out.println("true");
        sc.close();
    }
}
