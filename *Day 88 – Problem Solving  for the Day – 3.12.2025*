//Corporate Coding Question - *Leetcode 135 - Candy Distrubution - Greedy Logic*

import java.util.*;

public class CandyDistribution {
    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        // Number of children
        int n = sc.nextInt();
        int[] ratings = new int[n];

        // Input ratings
        for (int i = 0; i < n; i++) {
            ratings[i] = sc.nextInt();
        }

        // If no children
        if (n == 0) {
            System.out.println(0);
            return;
        }

        int[] candies = new int[n];
        Arrays.fill(candies, 1);

        // Left to Right pass
        for (int i = 1; i < n; i++) {
            if (ratings[i] > ratings[i - 1]) {
                candies[i] = candies[i - 1] + 1;
            }
        }

        // Right to Left pass
        for (int i = n - 2; i >= 0; i--) {
            if (ratings[i] > ratings[i + 1]) {
                candies[i] = Math.max(candies[i], candies[i + 1] + 1);
            }
        }

        // Sum total candies
        int totalCandies = 0;
        for (int c : candies) {
            totalCandies += c;
        }

        System.out.println(totalCandies);

        sc.close();
    }
}
